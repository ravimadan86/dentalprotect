{{> _corusel}}
<section class="ftco-section contact-section ftco-degree-bg">
    <div class="container">
        <div class="row block-9">
            {{#if category}}
            <div class="col-md-5 pr-md-5 m-auto">
                <div class="row d-flex mb-3 contact-info">
                    <div class="col-md-12 mb-4">
                        <h2 class="h4">Edit Category</h2>
                    </div>
                    <div class="w-100"></div>
                </div>
                <form action="/categories/editcategory/{{category.id}}?_method=PUT" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="New Category" name="category" value="{{category.category}}">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary py-2 px-3">
                    </div>
                </form>
            </div>
            {{else}}
            <div class="col-md-5 pr-md-5 m-auto">
                <div class="row d-flex mb-3 contact-info">
                    <div class="col-md-12 mb-4">
                        <h2 class="h4">Add new Category</h2>
                    </div>
                    <div class="w-100"></div>
                </div>
                <form action="/categories/addcategory" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="New Category" name="category">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary py-2 px-3">
                    </div>
                </form>
            </div>
            {{/if}}

            <div class="col-md-5">
                <div class="col-md-12 mb-4">
                    <h2 class="h4">Categories</h2>
                </div>
                <div class="w-100"></div>
                <ul>
                    {{#each categories}}
                    <li>
                        <a href="/categories/editcategory/{{id}}"><i class="fa fa-pencil-alt"></i></a>
                        <form action="/categories/delete/{{id}}?_method=DELETE" method="POST" id="delete-form"
                            style="display:inline-block;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button style="display: none" id="{{id}}"></button>
                            <label style="cursor:pointer;" for="{{id}}"><i style="color: red;" class="far fa-trash-alt"></i></label>
                        </form>
                        {{category}}

                    </li>
                    {{/each}}
                </ul>

            </div>


        </div>
    </div>
</section>